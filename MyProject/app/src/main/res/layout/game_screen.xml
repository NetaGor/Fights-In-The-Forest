<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/game"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Current Player"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="@font/pine_forest"
                android:textSize="25sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/current_player"
                android:text="Username1"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="8dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Next Player"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="@font/pine_forest"
                android:textSize="25sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/next_player"
                android:text="Username2"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="8dp"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.example.myproject.CustomButton
            android:id="@+id/ability1"
            android:layout_width="170dp"
            android:layout_height="60dp"
            app:buttonText="ability1"
            app:textColor="#AAAAAA"
            app:textSize="30sp"
            app:buttonFont="@font/pine_forest"
            android:textSize="30sp" />

        <com.example.myproject.CustomButton
            android:id="@+id/ability2"
            android:layout_width="170dp"
            android:layout_height="60dp"
            app:buttonText="ability2"
            app:textColor="#AAAAAA"
            app:textSize="30sp"
            app:buttonFont="@font/pine_forest"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.example.myproject.CustomButton
            android:id="@+id/ability3"
            android:layout_width="170dp"
            android:layout_height="60dp"
            app:buttonText="ability3"
            app:textColor="#AAAAAA"
            app:textSize="30sp"
            app:buttonFont="@font/pine_forest"
            android:textSize="30sp" />

        <com.example.myproject.CustomButton
            android:id="@+id/ability4"
            android:layout_width="170dp"
            android:layout_height="60dp"
            app:buttonText="ability4"
            app:textColor="#AAAAAA"
            app:textSize="30sp"
            app:buttonFont="@font/pine_forest"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.example.myproject.CustomButton
            android:id="@+id/ability5"
            android:layout_width="170dp"
            android:layout_height="60dp"
            app:buttonText="ability5"
            app:textColor="#AAAAAA"
            app:textSize="30sp"
            app:buttonFont="@font/pine_forest"
            android:textSize="30sp" />

        <com.example.myproject.CustomButton
            android:id="@+id/ability6"
            android:layout_width="170dp"
            android:layout_height="60dp"
            app:buttonText="ability6"
            app:textColor="#AAAAAA"
            app:textSize="30sp"
            app:buttonFont="@font/pine_forest"
            android:textSize="30sp" />
    </LinearLayout>

    <com.example.myproject.CustomButton
        android:id="@+id/view_health_btn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_green_light"
        android:padding="12dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:buttonText="View Health Status"
        app:textColor="@android:color/white"
        app:buttonFont="@font/pine_forest" />

    <TextView
        android:id="@+id/timer"
        android:text="60"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fontFamily="@font/reliesta_display"
        android:layout_marginBottom="30dp"
        android:textSize="50sp"
        android:padding="8dp"/>


</LinearLayout>